<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.puzz.graphanything.fragments.GraphColumnInfoFragment">

    <TextView
        android:id="@+id/graph_column_description"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center|center_vertical"
        android:layout_alignBottom="@+id/edit_column"
        android:layout_toLeftOf="@+id/edit_column"
        android:layout_toStartOf="@+id/edit_column" />

    <Button
        android:id="@+id/edit_column"
        android:text="@string/change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onEditColumn"
        />
</RelativeLayout>
